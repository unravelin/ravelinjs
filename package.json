{
  "name": "ravelinjs",
  "version": "0.1.0",
  "description": "Ravelin's Javascript Library.",
  "main": "./dist/ravelin.js",
  "scripts": {
    "build": "rollup --config",
    "lint": "jshint src",
    "version": "echo $npm_package_version",
    "release": "run-s build release-mkdir release-rename release-sri",
    "release-mkdir": "mkdir -p ./releases/$npm_package_version",
    "release-rename": "cp ./dist/ravelin.min.js ./releases/$npm_package_version/ravelin-$npm_package_version.min.js && cp ./dist/ravelin-no-encrypt.min.js ./releases/$npm_package_version/ravelin-no-encrypt-$npm_package_version.min.js",
    "release-sri": "go run github.com/sHesl/sri -out=./releases/$npm_package_version/sri.json -hash=all ./releases/$npm_package_version",
    "test": "mocha -C test/test.js",
    "test-cover": "nyc --reporter=html mocha -C test/test.js",
    "test-debug": "mocha --inspect-brk test/test.js",
    "test-appium": "wdio ./test/appium.conf.js",
    "test-crossbrowser": "wdio ./test/crossbrowser.conf.js",
    "test-browserstack": "PARALLEL=5 LOG_LEVEL=error wdio ./test/wdio.conf.js",
    "test-crossbrowser-e2e": "wdio ./test/crossbrowser-e2e.conf.js",
    "testpage-webpack": "webpack ./test/pages/webpack/index.js -o ./test/pages/webpack/bundle.js",
    "test-crossbrowser-live": "sh -u -c 'cbt_tunnels --username $CROSSBROWSERTESTING_USER --authkey $CROSSBROWSERTESTING_KEY --dir ./test/'",
    "go-serve": "goexec 'http.ListenAndServe(\":8088\", http.FileServer(http.Dir(\".\")))'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unravelin/ravelinjs.git"
  },
  "author": "Ravelin (https://github.com/unravelin) <support@ravelin.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/unravelin/ravelinjs/issues"
  },
  "homepage": "https://developer.ravelin.com/libraries-and-sdks/ravelinjs/",
  "devDependencies": {
    "@rollup/plugin-commonjs": "15.0.0",
    "@rollup/plugin-node-resolve": "9.0.0",
    "@rollup/plugin-replace": "2.3.3",
    "@wdio/browserstack-service": "6.4.0",
    "@wdio/cli": "6.4.0",
    "@wdio/junit-reporter": "6.4.0",
    "@wdio/local-runner": "6.4.0",
    "@wdio/logger": "6.0.16",
    "@wdio/mocha-framework": "6.4.0",
    "@wdio/spec-reporter": "6.4.0",
    "@wdio/sync": "6.4.0",
    "chai": "4.2.0",
    "circle-wait": "1.0.2",
    "express": "4.17.1",
    "jshint": "2.10.2",
    "npm-run-all": "4.1.5",
    "nyc": "14.1.1",
    "rollup": "2.26.11",
    "rollup-plugin-terser": "7.0.2",
    "sinon": "7.4.1",
    "terser-webpack-plugin": "2.1.1",
    "val-loader": "2.1.1",
    "wait-port": "0.2.2",
    "webpack": "4.39.2",
    "webpack-cli": "3.3.7",
    "xunit-viewer": "6.3.9",
    "yaku": "1.0.1"
  },
  "jshintConfig": {
    "unused": true,
    "freeze": true,
    "esversion": 3,
    "futurehostile": true,
    "latedef": false,
    "nonew": true,
    "undef": true,
    "browser": true,
    "globals": {
      "JSON": true
    }
  }
}
