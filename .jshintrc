{
  "unused": true,
  "freeze": true,
  "esversion": 3,
  "futurehostile": true,
  "latedef": false,
  "nonew": true,
  "undef": true,
  "browser": true,
  "globals": {
    "JSON": true
  },

  "overrides": {
    // Rollup bundles these files.
    "**/lib/**/*.js": {
      // export/import is handled automatically.
      "-W119": true
    },

    // Unit test files: run in the browser.
    "**/*.test.js": {
      "mocha": true,
      "globals": {
        "xhook": true,
        "expect": true,
        "Ravelin": true
      }
    },

    // Spec files are executed in node + mocha.
    "**/*.{spec,conf,config}.js": {
      "esversion": 9,
      "node": true,
      "browser": false,
      "mocha": true,
      "globals": {
        "expect": true,
        "browser": true,
        "$": true
      }
    },

    // Node.
    "**/*.[mc]js": {
      "esversion": 9,
      "node": true
    }
  }
}
